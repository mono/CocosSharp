<?xml version="1.0"?>
<package >
  <metadata>
    <id>CocosSharp.Forms</id>
    <version>1.7.0.0-pre1</version>
    <title>CocosSharp for Xamarin.Forms</title>
    <authors>Xamarin</authors>
    <owners>Xamarin</owners>
    <licenseUrl>http://github.com/xamarin/CocosSharp/blob/master/LicenseAndCredit.txt</licenseUrl>
    <projectUrl>https://github.com/xamarin/CocosSharp</projectUrl>
    <iconUrl>http://CocosSharp.xamarin.com</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>CocosSharp is a simple game engine typically used for 2D games, educational software and 2D visualizations. This code allows games to be built with a write-once, run-anywhere approach.</description>
    <releaseNotes>See https://github.com/mono/CocosSharp/blob/master/ReleaseNotes/ReleaseNotes_v1.7.0.0-pre1.md</releaseNotes>
    <summary>CocosSharp is a C# implementation of the Cocos2D and Cocos3D APIs that runs on any platform where MonoGame runs.</summary>
    <copyright>Xamarin Inc</copyright>
    <tags>cocos2d cocossharp xna 2D games visualization engine forms </tags>

    <references>
      <group targetFramework="netcore">
        <reference file="CocosSharp.Forms.dll"></reference>
      </group>
    </references>

    <dependencies>
      <dependency id="Xamarin.Forms" />
      <dependency id="CocosSharp" />
    </dependencies>

  </metadata>

  <files>

     <!--PCL -->
     <!-- http://blog.xamarin.com/how-to-update-nuget-packages-for-64-bit/ -->
     <file src="CocosSharp.Forms\CocosSharp.Forms.PCL\bin\Release\*.dll" target="lib\portable-net45+win+wpa81+wp81" />

     <!--Xamarin.Android-->
    <file src="CocosSharp.Forms\CocosSharp.Forms.Android\bin\Release\*.dll" target="lib\MonoAndroid10\" />
    <file src="CocosSharp.Forms\CocosSharp.Forms.Android\bin\Release\*.xml" target="lib\MonoAndroid10\" />

     <!--Xamarin.iOS-->
    <file src="CocosSharp.Forms\CocosSharp.Forms.iOS\bin\Release\*.dll" target="lib\Xamarin.iOS10\" />
    <file src="CocosSharp.Forms\CocosSharp.Forms.iOS\bin\Release\*.xml" target="lib\Xamarin.iOS10\" />

    <!--Windows Phone 8.1-->
    <file src="CocosSharp.Forms\CocosSharp.Forms.WP\bin\Release\*.dll" target="lib\wpa81" />
    <file src="CocosSharp.Forms\CocosSharp.Forms.WP\bin\Release\*.xml" target="lib\wpa81" />

  </files>

</package>
